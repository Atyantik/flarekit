{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "outDir": "dist",
    "lib": ["ESNext"],
    "types": ["./worker-configuration.d.ts"],
    "paths": {
      "@/*": ["./src/*"],
      "@schema/*": ["./src/schema/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "./worker-configuration.d.ts"]
}
